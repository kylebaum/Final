<div class="page-header">
  <h1>
    Maintenance Requests
    <a href="/maintenances/new" class="btn btn-lg btn-success">New Request</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Property</th>
        <th>Manager</th>
        <th>Request</th>
        <th>Actions</th>
      </tr>

      <% @maintenances.each do |maintenance| %>
      <tr>
        <td><%= maintenance.property.address %></td>
        <td><%= maintenance.user.username %></td>
        <td><%= maintenance.body %></td>
        <td>
          <a href="/maintenances/<%= maintenance.id %>" class="btn btn-primary">Show</a>
          <% if current_user.id == maintenance.user_id  %>
                  <a href="/maintenances/<%= maintenance.id %>/edit" class="btn btn-warning">Edit</a>
                  <a href="/delete_maintenance/<%= maintenance.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
                  <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
