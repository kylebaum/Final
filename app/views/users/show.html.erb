<div class="page-header">
  <h3>Manager <%= @user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Properties</th>
        <th>Image</th>
        <th>Address</th>

      </tr>

      <% @user.properties.each do |property| %>
      <tr>
        <td><%= property.caption %></td>
        <td>  <img src="<%= property.image %>" width="80"></td>
        <td><%= property.address %></td>
        <td>
          <a href="/properties/<%= property.id %>" class="btn btn-primary">Show</a>
          <% if current_user.id == property.user_id  %>
                  <a href="/properties/<%= property.id %>/edit" class="btn btn-warning">Edit</a>
                  <a href="/delete_property/<%= property.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
                  <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <div class="col-md-12 mb-2">
      <dl class="dl-horizontal">
      <h3>  <a href="/users/" class="btn btn-small btn-success">Other Managers</a></dd></h3>
    </div>
  </div>
</div>
