<div class="page-header">
  <h3> <%= @user.username %>'s Properties</h3>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>Image</th>
        <th>Description</th>

      </tr>

      <% @user.properties.each do |property| %>
      <tr>
          <td><%= property.address %></td>

        <td>  <a href="/properties/<%= property.id %>"><img src="<%= property.image %>" class="img-responsive"> </a> </td>
        <td><%= property.caption %></td>
        <td>
          <a href="/properties/<%= property.id %>" class="btn btn-primary">Show</a>
          <% if current_user.id == property.user_id  %>
                  <a href="/properties/<%= property.id %>/edit" class="btn btn-warning">Edit</a>
                  <a href="/delete_property/<%= property.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
                  <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <p class="help-block">
          <% if current_user.id == @user.id  %>
      <a href="/properties/new">or add a new property</a>
       <% end %>
    </p>
    <div class="col-md-12 mb-2">
      <dl class="dl-horizontal">

      <h3>  <a href="/users/" class="btn btn-small btn-success">Other Managers</a></dd></h3>
    </div>
  </div>
</div>
