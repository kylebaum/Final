<div class="page-header">
  <h1>
    Properties
    <a href="/properties/new" class="btn btn-lg btn-success">New Property</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Image</th>
        <th>House or Apartment</th>
        <th>Number of bedrooms</th>
        <th>Number of bathrooms</th>
        <th>City</th>
        <th>Neighborhood</th>
        <th>Pet Policy</th>
        <th>Price</th>
        <th>Address</th>
        <th>Manager</th>
        <th>Actions</th>
      </tr>

      <% @properties.each do |property| %>
      <tr>
        <td><%= property.caption %></td>
        <td><a href="/properties/<%= property.id %>"><img src="<%= property.image %>" class="img-responsive"> </a></td>
        <td><%= property.houseorapartment %></td>
        <td><%= property.numberofbedroom %></td>
        <td><%= property.numberofbathroom %></td>
        <td><%= property.city %></td>
        <td><%= property.neighborhood %></td>
        <td><%= property.policy %></td>
        <td>$<%= property.price %></td>
        <td><%= property.address %></td>
        <td><%= property.user.username %></td>
        <td>
          <a href="/properties/<%= property.id %>" class="btn btn-primary">Show</a>
          <% if current_user.id == property.user_id  %>
                  <a href="/properties/<%= property.id %>/edit" class="btn btn-warning">Edit</a>
                  <a href="/delete_property/<%= property.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
                  <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
