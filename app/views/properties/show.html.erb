<div class="page-header">
  <h3>Property #<%= @property.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Caption</dt>
      <dd><%= @property.caption %></dd>

      <dt>Image</dt>
      <dd><%= @property.image %></dd>

      <dt>Houseorapartment</dt>
      <dd><%= @property.houseorapartment %></dd>

      <dt>Numberofbedroom</dt>
      <dd><%= @property.numberofbedroom %></dd>

      <dt>Numberofbathroom</dt>
      <dd><%= @property.numberofbathroom %></dd>

      <dt>City</dt>
      <dd><%= @property.city %></dd>

      <dt>Neighborhood</dt>
      <dd><%= @property.neighborhood %></dd>

      <dt>Policy</dt>
      <dd><%= @property.policy %></dd>

      <dt>Price</dt>
      <dd><%= @property.price %></dd>

      <dt>User</dt>
      <dd><%= @property.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/properties" class="btn btn-primary">
        Back
      </a>
      <a href="/properties/<%= @property.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_property/<%= @property.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
