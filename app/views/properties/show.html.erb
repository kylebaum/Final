<div class="page-header">
  <h3>Property #<%= @property.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Description</dt>
      <dd><%= @property.caption %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @property.image %>" class="img-responsive"></dd>

      <dt>House or Apartment</dt>
      <dd><%= @property.houseorapartment %></dd>

      <dt>Number of bedrooms</dt>
      <dd><%= @property.numberofbedroom %></dd>

      <dt>Number of bathrooms</dt>
      <dd><%= @property.numberofbathroom %></dd>

      <dt>City</dt>
      <dd><%= @property.city %></dd>

      <dt>Neighborhood</dt>
      <dd><%= @property.neighborhood %></dd>

      <dt>Pet Policy</dt>
      <dd><%= @property.policy %></dd>

      <dt>Price</dt>
      <dd><%= @property.price %></dd>

      <dt>Address</dt>
      <dd><%= @property.address %></dd>

      <dt>Map</dt>
      <html>
      <head>
        <style>
           #map {
            height: 300px;
            width: 50%;
           }
        </style>
      </head>
      <body>
        <div id="map"></div>
        <script>
          function initMap() {
            var uluru = {lat: <%= @latitude %>, lng: <%= @longitude %>};
            var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 13,
              center: uluru
            });
            var marker = new google.maps.Marker({
              position: uluru,
              map: map
            });
          }
        </script>
        <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAvemLAQn4jstJNkBMFIJ655qBKPzKSt50&callback=initMap">
        </script>
      </body>
    </html>

      <dt>User</dt>
      <dd><%= @property.user.username %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/properties" class="btn btn-primary">
        Back
      </a>
      <a href="/properties/<%= @property.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_property/<%= @property.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
