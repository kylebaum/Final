<!-- Validation failure messages -->
<% if @property.errors.any? %>
  <% @property.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @property.address %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_property/<%= @property.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @property.address %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @property.image %>">
      </div>

      <!-- Label and input for caption -->
      <div class="form-group">
        <label for="caption" class="control-label">
          Description
        </label>

        <textarea id="caption" name="caption" placeholder="Caption" class="form-control" rows="3"><%= @property.caption %></textarea>
      </div>

      <!-- Label and input for neighborhood -->
      <div class="form-group">
        <label for="neighborhood" class="control-label">
          Neighborhood
        </label>

        <input type="text" id="neighborhood" name="neighborhood" placeholder="Neighborhood" class="form-control" value="<%= @property.neighborhood %>">
      </div>

      <!-- Label and input for houseorapartment -->
      <div class="form-group">
        <label for="houseorapartment" class="control-label">
          House or Apartment
        </label>

        <select name="houseorapartment" id="houseorapartment" class="form-control" class="form-control" value="<%= @property.houseorapartment %>">>
  <option selected="selected" value="House">House</option>
  <option  value="Apartment">Apartment</option>
  </select>
      </div>

      <!-- Label and input for numberofbedroom -->
      <div class="form-group">
        <label for="numberofbedroom" class="control-label">
          Number of bedrooms
        </label>

        <input type="text" id="numberofbedroom" name="numberofbedroom" placeholder="Numberofbedroom" class="form-control" value="<%= @property.numberofbedroom %>">
      </div>

      <!-- Label and input for numberofbathroom -->
      <div class="form-group">
        <label for="numberofbathroom" class="control-label">
          Number of bathrooms
        </label>

        <input type="text" id="numberofbathroom" name="numberofbathroom" placeholder="Numberofbathroom" class="form-control" value="<%= @property.numberofbathroom %>">
      </div>





      <!-- Label and input for policy -->
      <div class="form-group">
        <label for="policy" class="control-label">
         Pet Policy
        </label>

        <select name="policy" id="policy" class="form-control" class="form-control" value="<%= @property.policy %>">>
        <option selected="selected" value="None allowed">None allowed</option>
        <option  value="Dogs only">Dogs only</option>
        <option  value="Cats only">Cats only</option>
        <option value="Dogs and cats">Dogs and cats</option>
        </select>
      </div>

      <!-- Label and input for price -->
      <div class="form-group">
        <label for="price" class="control-label">
          Rent
        </label>

        <input type="text" id="price" name="price" placeholder="Price" class="form-control" value="<%= @property.price %>">
      </div>



      <!-- Label and input for user_id -->
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%=current_user.id%>">

      <button class="btn btn-warning">
        Update Property
      </button>
      or
      <a href="/properties/<%= @property.id %>">Cancel</a>
    </form>
  </div>
</div>
